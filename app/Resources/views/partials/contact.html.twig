<div class="container">
    <div class="jt_row jt_row-fluid row">

        <div class="col-md-12 jt_col column_container">
            <h2 class="section-title">Contact</h2>
        </div>
        <div class="col-md-6 col-md-offset-3 jt_col column_container">
            <div class="section-subtitle">
                Montpellier et ses alentours
            </div>
        </div>
        <form action="#" method="post" id="contact-form" class="contact-form">
            <div class="col-md-6 jt_col column_container">
                <input autocomplete="off" type="text" id="name" name="name" class="text name required" placeholder="Votre nom" >
                <input autocomplete="off" type="email" id="email" name="email" class="text email required" placeholder="Votre email (pour être recontacté)" >
                <input autocomplete="off" type="text" id="subject" name="subject" placeholder="Sujet de votre message" >
            </div>

            <div class="col-md-6 jt_col column_container">
                <textarea id="message" name="message" class="text area required" placeholder="Votre message" rows="10"></textarea>
            </div>

            <div class="col-md-4 col-md-offset-4 jt_col column_container">
                <div class="formSent"><strong>Your Message Has Been Sent!</strong> Thank you for contacting us.</div>
                <button type="submit" class="button contact center">Contactez-nous</button>
            </div>

        </form>
        <div class="voffset100"></div>
    </div>
    <div class="voffset50"></div>
</div>